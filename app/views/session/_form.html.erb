<% flash.each do | type, msg | %>
  <div style="color: lightpink; margin: 10px;">
    <%= msg %>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, local: true) do | form |  %>
        <%= form.label :email %>
        <div class="col-10">
          <%= form.email_field :email, placeholder: "Enter your email" %>
        </div>

        <%= form.label :password %>
        <div class="col-10">
          <%= form.password_field :password, placeholder: "Enter your password" %>
        </div>

        <%= form.submit "Login", style: "margin: 10px; width: 100px;" %>
      <% end %>
    </div>
  </div>
</div>