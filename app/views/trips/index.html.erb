<p style="color: green"><%= notice %></p>

<h1>Trips</h1>
<div id="trips">
  <% @trips.each do |trip| %>
    <% if logged_in? && trip.user == current_user %>
      <h2><%= trip.user.firstName if trip.user %>'s trip</h2>
      <%= render trip %>
      <p>
        <%= link_to "Show this trip", trip %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New trip", new_trip_path %>
